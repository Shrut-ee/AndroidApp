<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".geodatasource.CityDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_name"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCityName"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_country"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCountry"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_region"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvRegion"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_currency"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCurrency"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_latitude"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLatitude"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/geo_longitude"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLongitude"
                tools:text="Ottawa"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpenLocation"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_location"
        android:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>